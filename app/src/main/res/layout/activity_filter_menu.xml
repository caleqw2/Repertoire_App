<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/filterLabel"
        android:layout_width="152dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="56dp"
        android:text="Filter By:"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/aToZButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="A - Z"
        app:layout_constraintStart_toStartOf="@+id/filterLabel"
        app:layout_constraintTop_toBottomOf="@+id/filterLabel" />

    <RadioButton
        android:id="@+id/zToAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z - A"
        app:layout_constraintStart_toStartOf="@+id/aToZButton"
        app:layout_constraintTop_toBottomOf="@+id/aToZButton" />

    <RadioButton
        android:id="@+id/mostRecentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most Recent"
        app:layout_constraintStart_toStartOf="@+id/zToAButton"
        app:layout_constraintTop_toBottomOf="@+id/zToAButton" />

    <RadioButton
        android:id="@+id/leastRecentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Least Recent"
        app:layout_constraintStart_toStartOf="@+id/mostRecentButton"
        app:layout_constraintTop_toBottomOf="@+id/mostRecentButton" />

    <RadioButton
        android:id="@+id/mostPlayedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Most Played"
        app:layout_constraintStart_toStartOf="@+id/leastRecentButton"
        app:layout_constraintTop_toBottomOf="@+id/leastRecentButton" />

    <RadioButton
        android:id="@+id/leastPlayedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Least Played"
        app:layout_constraintStart_toStartOf="@+id/mostPlayedButton"
        app:layout_constraintTop_toBottomOf="@+id/mostPlayedButton" />

    <RadioButton
        android:id="@+id/slowestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slowest"
        app:layout_constraintStart_toStartOf="@+id/leastPlayedButton"
        app:layout_constraintTop_toBottomOf="@+id/leastPlayedButton" />

    <RadioButton
        android:id="@+id/fastestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fastest"
        app:layout_constraintStart_toStartOf="@+id/slowestButton"
        app:layout_constraintTop_toBottomOf="@+id/slowestButton" />


    <EditText
        android:id="@+id/styleTextBox"
        android:layout_width="172dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="Enter Style (Optional)"
        android:inputType="textPersonName"
        app:layout_constraintBaseline_toBaselineOf="@+id/clearButton"
        app:layout_constraintEnd_toStartOf="@+id/clearButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="132dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="286dp"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/styleTextBox" />


    <Button
        android:id="@+id/cancelButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="@android:string/cancel"
        app:layout_constraintBaseline_toBaselineOf="@+id/doFilterButton"
        app:layout_constraintEnd_toStartOf="@+id/doFilterButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/doFilterButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancelButton"
        app:layout_constraintTop_toBottomOf="@+id/styleTextBox" />


</androidx.constraintlayout.widget.ConstraintLayout>